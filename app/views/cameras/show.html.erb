<p id="notice"><%= notice %></p>

<p>
  <b>Camera Name:</b>
  <%= @camera.name %>
</p>

<table class="cameras" summary="User cameras">
    <%= render @user %>
</table>


<td class="sidebar round">
  <strong>Share subscriber</strong> <%= @camera.shares.count %>
</td>

<% if @camera.shares %>
  <table class="shares"  summary="Camera share">
    <%= render @shares %>
  </table>
  <%= will_paginate @shares %>
<% end %>
</tb>

<%= form_tag "/shares" do %>

  <div class="field">
    <%= label_tag "add new sharing camera email" %>
    <%= text_field_tag :email %>
    <%= SharesController.set_camera_id @camera.id %>
  </div>
  <div class="actions">
    <%= submit_tag "Submit" %>
  </div>
<% end %>